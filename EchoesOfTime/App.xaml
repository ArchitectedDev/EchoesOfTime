<Application x:Class="EchoesOfTime.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EchoesOfTime.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:IsActiveToContentConverter x:Key="IsActiveToContentConverter" />
        <local:IsActiveToToolTipConverter x:Key="IsActiveToToolTipConverter" />
        <local:IsExpandedToContentConverter x:Key="IsExpandedToContentConverter" />
        <local:IsExpandedToToolTipConverter x:Key="IsExpandedToToolTipConverter" />
    </Application.Resources>
</Application>
